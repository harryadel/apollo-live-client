{
  "name": "apollo-live-client",
  "version": "1.0.0",
  "description": "Modern React hooks-based component for handling reactive events with Apollo GraphQL Live Queries",
  "keywords": [
    "react",
    "apollo",
    "graphql",
    "subscription",
    "live-queries",
    "reactive",
    "real-time",
    "hooks",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cult-of-coders/apollo-live-client.git"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "compile": "tsc",
    "pretest": "npm run type-check && npm run compile",
    "test": "npm run testonly --",
    "posttest": "npm run lint",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "watch": "tsc -w",
    "testonly": "mocha --reporter spec --full-trace ./dist/__tests__/*.js",
    "testonly-watch": "mocha --reporter spec --full-trace ./dist/__tests__/*.js --watch",
    "coverage": "nyc mocha --reporter spec --full-trace ./dist/__tests__/*.js",
    "prepublishOnly": "npm run clean && npm run compile",
    "format": "eslint src --ext .ts,.tsx --fix",
    "ci": "npm run type-check && npm run lint && npm run test"
  },
  "peerDependencies": {
    "@apollo/client": ">=3.0.0",
    "graphql": ">=14.0.0",
    "prop-types": ">=15.7.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@apollo/client": "^4.0.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphql": "^16.11.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.0",
    "sinon": "^17.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.5.4"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
